{
  "name": "trussfab-ui",
  "private": true,
  "version": "0.1.0",
  "description": "UI for TrussFab",
  "main": "",
  "scripts": {
    "start": "npm run babel & npm run webpack",
    "babel": "babel js/src --watch --out-dir js/build --ignore cycle_designer",
    "webpack": "webpack --config webpack.config.js --mode development --watch"
  },
  "author": "",
  "license": "GPL v3",
  "dependencies": {
    "bootstrap": "^4.0.0",
    "chart.js": "^2.7.2",
    "d3": "^4.13.0",
    "jquery": "^3.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/robertkovax/TrussFab.git"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "import",
      "prettier"
    ],
    "env": {
      "jquery": true,
      "browser": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "es5"
        }
      ]
    }
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.19.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "prettier": "^1.11.1",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.12"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
